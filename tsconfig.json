{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./publish/es",
    "declarationDir": "./publish/es",
    "strict": false,
    "declaration": true,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "dashkit-ui": ["src/"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "custom.d.ts"],
  "exclude": ["node_modules"]
}
